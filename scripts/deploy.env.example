# Пример конфига для scripts/deploy.js

# Доступ к серверу
SSH_HOST=fizio.online
SSH_USER=root
SSH_PORT=22

# Аутентификация: используйте ИЛИ ключ, ИЛИ пароль
SSH_KEY=/root/.ssh/id_rsa
# SSH_PASSWORD=your_strong_password

# Пути на сервере
REMOTE_PATH=/var/www/fizio
# Если public в нестандартном месте — раскомментируйте и укажите
# PUBLIC_PATH=/var/www/fizio/public


